{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./public/js",
    "rootDir": "./src"
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",

  "include": ["./src/**/*"]
}
